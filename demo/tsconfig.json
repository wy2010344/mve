{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,   "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "bundler",
    // "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    /* Linting */
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    ".yalc"
  ],
  "include": [
    "src"
  ]
}